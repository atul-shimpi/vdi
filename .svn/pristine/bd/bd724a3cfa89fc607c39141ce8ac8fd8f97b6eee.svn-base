<div class="headlabel" align="center">
<h1>Editing software</h1>

<% form_for(@edit_software) do |f| %>
<table class="mainTable">
	<tr><td><%= f.error_messages %></td></tr>
	<tr><td>
		<table class="tableList" id="noTrHover">
			<tr id="firstRow">
				<td><div align="left"><%= link_to 'Back', softwares_path %></div></td>
				<td><div align="right"><%= link_to 'Show', @edit_software %></div></td>
			</tr>
			<tr><td colspan=2>
				<table class="tableDetail">
					<tr>
						<td><b>Name:</b></td>
						<td id="secondTd"><%= f.text_field :name %></td>
					</tr>
					<tr>
						<td><b>Version:</b></td>
						<td id="secondTd"><%= f.text_field :version %></td>
					</tr>
					<tr>
						<td><b>License Count:</b></td>
						<td id="secondTd"><%= f.text_field :license_count %> License Count won't be negative</td>
					</tr>
					<tr>
						<td><b>Download Link:</b></td>
						<td id="secondTd"><%= f.text_field :download_link %></td>
					</tr>
					<tr>
						<td><b>Download Account:</b></td>
						<td id="secondTd"><%= f.text_field :download_account %></td>
					</tr>
					<tr>
						<td><b>Download Password:</b></td>
						<td id="secondTd"><%= f.text_field :password %></td>
					</tr>
					<tr>
						<td><b>License Detail:</b></td>
						<td id="secondTd"><%= link_if can_access('license_detail','softwares'), 'show detail', :action=>'license_detail',:id=>@edit_software.id%></td>
					</tr>
					<tr>
						<td><b>Is Free:</b></td>
						<td id="secondTd"><%=f.check_box "is_free"%></td>
					</tr>
					<tr>
						<td><b>Open for reqests:</b></td>
						<td id="secondTd"><%=f.check_box "open_for_request"%></td>
					</tr>					
				</table>
			</td></tr>
			<tr><td colspan=2  align="right"><%= f.submit "Update" %></td></tr>
		</table>
	</td></tr>
</table>
<% end %>

</div>
