		<div id="header">
			<%if !@demo_product.nil? %>
			   <%= image_tag("/demo_products/product_logo?id=" + @demo_product.id.to_s, :size=>'270x70') %>
			<%else%>
			<%end%>   
	    </div>
        <div id="requet_form">
        	<p style="color: red; font-weight: bold"><%= flash[:notice] %></p>
          <%if !@demo_product.nil? %>
           <% form_tag('/demos/creat_demo_job', :id=>"demo_request") do%>
		     <input type="hidden" name="product" value=<%= @demo_product.name%>>
             <div id="request_table_div">
			   <table id="request_table">
               	 <tr>
               	   <td class='left_td'>Name: </td> 
				   <td><%= text_field_tag :name, params[:name], :class=>"text_input"%></td>
			     </tr>
                 <tr>
               	   <td class='left_td'> Company: </td>
				   <td><%= text_field_tag :company, params[:company], :class=>"text_input"%></td>
			     </tr>
                 <tr>
               	    <td class='left_td'> Email: </td>
					<td><%= text_field_tag :email, params[:email], :class=>"text_input"%></td>
			     </tr>
               	 <tr>
               	   <td class='left_td'>Demo: </td> 
				   <td><%= select_tag "demo_id", options_from_collection_for_select(Demo.find(:all, :conditions=> "demo_product_id = '#{@demo_product.id}'"), 'id', 'name'),{:include_blank => false, :class=>"text_input"}%></td>
			     </tr>				 
                 <tr>
               	    <td class='left_td'> Authentication Key: </td>
					<td><%= text_field_tag :auth_key, params[:auth_key], :class=>"text_input"%></td>
			     </tr>				 
			     <tr>
			       <td class='left_td'> Terms&Conditions</td>
			       <td><textarea id="agreement" cols="" rows="" readonly="true" style="width:480px;height:110px;font-size:12px;color:#666"></textarea><br>
			           <input type="checkbox" id="agreed" name="agreed">I accept the terms and conditions</td>
			     </tr>
			   </table>	
			 </div>
			 <div id="submit_link" onclick="javascript:submit();" onmouseover="javascript:handCursor(this);">
			    <img src="/images/submit_button.png">	   
             </div>
			<% end %> 
		  <%else%>
		     Your demo deploy link is not correct, please contact the product team
		  <%end%>		    
		</div>
		<div id="footer" align="center">
